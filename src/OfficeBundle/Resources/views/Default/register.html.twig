{% extends 'layouts.html.twig' %}

{% block title %}Daftar{% endblock %}

{% block innerLayout %}
    <div class="login">
        <div class="login__block toggled" id="l-login">
            <div class="login__block__header">
                <img src="{{ asset('images') }}/fix.jpg" height="50" alt="">
                Harap Daftar terlebih dahulu
            </div>
            <div class="login__block__body">
                <form method="post" action="{{ ('/register') }}">
                    <div class="form-group form-group--float form-group--centered form-group--centered">
                        <input type="text" class="form-control" name="nama">
                        <label>Nama Lengkap</label>
                        <i class="form-group__bar"></i>
                    </div>
                    <div class="form-group form-group--float form-group--centered form-group--centered">
                        <input type="text" class="form-control" name="username">
                        <label>Nama Pengguna</label>
                        <i class="form-group__bar"></i>
                    </div>
                    <div class="form-group form-group--float form-group--centered form-group--centered">
                        <input type="password" class="form-control" name="password">
                        <label>Kata Sandi</label>
                        <i class="form-group__bar"></i>
                    </div>
                    <button class="btn btn--light btn--icon m-t-15"><i class="zmdi zmdi-long-arrow-right"></i></button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}