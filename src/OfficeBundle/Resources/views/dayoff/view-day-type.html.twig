{% extends 'subLayout.html.twig' %}

{% block content %}
    <div class="card">
        <div class="card__header">
            <h2>
                <center><strong>Daftar Seluruh Cuti</strong></center>
            </h2>
        </div>
        <div class="card__body">
            <table class="table table-striped table-responsive" id="table">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Jenis Cuti</th>
                        <th>Lama Hari</th>
                        <th>Opsi</th>
                    </tr>
                </thead>
                <tbody>
                {% set i = 1 %}
                {% if data|length > 0 %}
                    {% for item in data %}
                        <tr>
                            <td>{{ i }}</td>
                            <td>{{ item.name }}</td>
                            <td>{{ item.count }}</td>
                            <td>
                                <a href="{{ path('office_admin_dayoff_type_edit', {type_id: item.id}) }}" class="btn btn-warning btn-xs">SUNTING</a>
                                <a href="{{ path('office_admin_dayoff_type_delete', {type_id: item.id}) }}" class="btn btn-danger btn-xs">HAPUS</a>
                            </td>
                        </tr>
                        {% set i = i + 1 %}
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="3"><center>Tidak ada data</center></td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block customJS %}
    <script>
        $('#table').dataTable({

        });
    </script>
{% endblock %}
