{% extends 'subLayout.html.twig' %} {% block title %}Daftar Cuti Bersama{% endblock %} {% block content %}
<div class="content__header">
    <h2></h2>
</div>
<div class="card">
    <div class="card__header">
        <h2>Daftar Cuti Bersama
            <small>Daftar dibawah adalah cuti bersama yang diinputkan oleh admin, dan otomatis berstatus
                <strong>diterima</strong>
            </small>
        </h2>
    </div>
    <div class="card__body">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped table-condensed" id="together">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nama pegawai</th>
                                <th>Penempatan</th>
                                <th>Keterangan</th>
                                <th width="200">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set i = 1 %}
                            {% if data|length > 0 %}
                                {% for item in data %}
                                    <tr>
                                        <td>{{ i }}</td>
                                        <td>{{ item.userId.nama }}</td>
                                        <td>{{ item.userId.penempatan.namaPerusahaan }}</td>
                                        <td>{{ item.description }}</td>
                                        <td>
                                            <a href="{{ path('office_admin_dayoff_delete', {'cuti_id': item.id}) }}" class="btn btn-danger btn-xs">Hapus</a>
                                        </td>
                                    </tr>
                                    {% set i = i + 1 %}
                                {% endfor %}
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block customJS %}
    <script>
        $(function () {
            $('#together').dataTable();
        });
    </script>
{% endblock %}