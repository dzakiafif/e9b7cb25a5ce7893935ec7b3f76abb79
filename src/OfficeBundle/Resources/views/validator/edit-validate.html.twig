{% extends 'subLayout.html.twig' %}

{% block content %}
    <div class="content__header">
        <h2><center>Edit Validasi</center></h2>
    </div>
    <div class="card">
        <div class="card__body">
            <form method="post">
                <div class="form-group form-group--centered form-group--centered">
                    <input type="radio" id="radio1" name="validate" value="0" {% if data.isValidated == 0 %}checked="checked"{% endif %}>
                    <label for="radio1">Belum Tervalidasi</label>
                </div>
                <div class="form-group form-group--centered form-group--centered">
                    <input type="radio" id="radio2" name="validate" value="1"{% if data.isValidated == 1 %}checked="checked"{% endif %}>
                    <label for="radio2">Tervalidasi</label>
                </div>
                <button class="btn btn-primary btn-block">SIMPAN</button>
            </form>
        </div>
    </div>
{% endblock %}