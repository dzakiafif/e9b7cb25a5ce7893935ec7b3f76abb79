{% extends 'subLayout.html.twig' %}

{% block content %}
    <section id="content">

        <div class="content__header">
        </div>
        <div class="card">
            <div class="card__header">
                <h2>Data Jam Kerja</h2>
            </div>

            <div class="card__body">
                <div class="table-responsive">
                    <table class="table table-striped table-condensed" id="test">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Keterangan</th>
                            <th>Jam Masuk</th>
                            <th>Jam Pulang</th>
                            <th width="200">Aksi</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set i = 1 %}
                        {% for item in data %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ item.label }}</td>
                                <td>{{ item.startTime|date('H:i') }}</td>
                                <td>{{ item.endTime|date('H:i') }}</td>
                                <td>
                                    <a href="{{ path('office_admin_shift_delete',{id: item.id}) }}" class="btn btn-danger btn--icon-text btn-xs" title="Hapus data"><i class="zmdi zmdi-delete"></i></a>
                                    <a href="{{ path('office_admin_shift_edit', {id: item.id}) }}" class="btn btn-warning btn--icon-text btn-xs" title="Sunting data"><i class="zmdi zmdi-edit"></i></a>
                                    {#<a href="#" class="btn btn-success btn--icon-text btn-xs">DAFTAR PEGAWAI</a>#}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block customJS %}
    <script>
        $('#test').dataTable({

        });
    </script>
{% endblock %}
