{% extends 'subLayout.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
    <div class="content__header">
        <h2><center>Edit Status Karyawan</center></h2>
    </div>
    <div class="card">
        <div class="card__body">
            <form method="post">
                <div class="form-group form-group--centered form-group--centered">
                    <input type="radio" id="radio1" name="status" value="0" {% if data.status == 0 %}checked="checked"{% endif %}>
                    <label for="radio1" >TUL</label>
                </div>
                <div class="form-group form-group--centered form-group--centered">
                    <input type="radio" id="radio2" name="status" value="1" {% if data.status == 1 %}checked="checked"{% endif %}>
                    <label for="radio2">PKWT 1</label>
                </div>
                <div class="form-group form-group--centered form-group--centered">
                    <input type="radio" id="radio3" name="status" value="2" {% if data.status == 2 %}checked="checked"{% endif %}>
                    <label for="radio3">PKWT 2</label>
                </div>
                <div class="form-group form-group--centered form-group--centered">
                    <input type="radio" name="status" id="radio4" value="3" {% if data.status == 3 %}checked="checked"{% endif %}>
                    <label for="radio4">PKWTT</label>
                </div>
                <div class="form-group form-group--centered form-group--centered">
                    <input type="radio" name="status" id="radio5" value="4" {% if data.status == 4 %}checked="checked"{% endif %}>
                    <label for="radio5">Karyawan Tetap</label>
                </div>

                <button class="btn btn-primary">SIMPAN</button>
            </form>
        </div>
    </div>
{% endblock %}