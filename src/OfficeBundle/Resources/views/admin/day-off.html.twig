{% extends 'subLayout.html.twig' %}
{% block content %}
    <div class="content__header">
        <h2></h2>
    </div>
    <div class="card">
        <div class="card__header">
            <h2>Input form cuti
                <small>Masukkan data sesuai yang dibutuhkan</small>
            </h2>
        </div>
        <div class="card__body">
            <div class="row">
                <div class="col-md-5">
                    <form action="" method="post">

                        <div class="form-group">
                            <label for="">Nama :</label>
                            <h3 class="form-label">{{ user.nama }}</h3>
                        </div>

                        <div class="form-group">
                            <select name="day-type" id="day-type" class="form-control">
                                <option value="0">Regular</option>
                                {% for tipe in type %}
                                    <option value="{{ tipe.id }}" data-count="{{ tipe.count }}">{{ tipe.name }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group" id="day-left">
                            <label for="">Sisa cuti anda pada sesi ini :</label>
                            <h3 class="form-label">{{ quotas }} Hari</h3>
                        </div>

                        <div class="form-group" id="day-long-group">
                            <label for="day-long">Lama cuti :</label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="day-long" value="1">
                                    <i class="input-helper"></i>
                                    1 Hari
                                </label>
                            </div>
                            <div class="clearfix"></div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="day-long" value="2">
                                    <i class="input-helper"></i>
                                    Lebih dari 1 Hari
                                </label>
                            </div>
                            <div class="clearfix"></div>
                        </div>

                        <input type="hidden" name="day-interval" id="day-interval" value="30">

                        <div id="time-group" class="hide">
                            <div class="form-group" id="start-date">
                                <label for="">Tanggal mulai :</label>
                                <input type="text" name="date-start" id="date-start" class="picker form-control" required="required">
                            </div>

                            <div class="form-group" id="end-date">
                                <label for="">Tanggal akhir :</label>
                                <input type="text" name="date-end" id="date-end" class="picker form-control">
                            </div>

                            <div class="form-group">
                                <label for="description">Keterangan :</label>
                                <textarea name="description" id="description" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Ajukan" class="btn btn-primary pull-right">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}