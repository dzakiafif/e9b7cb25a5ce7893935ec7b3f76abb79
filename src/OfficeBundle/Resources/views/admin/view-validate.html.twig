{% extends 'subLayout.html.twig' %}

{% block content %}
    <div class="card">
        <div class="card__body">
            {% if user.status == 0 %}
                <p>NIK : {% if user.nik is defined %}{{ user.nik }}{% else %}-{% endif %}</p>
                <p>No.Registrasi : {% if user.noRegistrasi is defined %}{{ user.noRegistrasi }}{% else %}-{% endif %}</p>
                <p>Nama : {% if user.nama is defined %}{{ user.nama }}{% else %}-{% endif %}</p>
                <p>Tempat Lahir : {% if user.tempatLahir is defined %}{{ user.tempatLahir }}{% else %}-{% endif %}</p>
                <p>Tanggal Lahir : {% if user.tanggalLahir is not null %}{{ user.tanggalLahir|date('d M Y') }}{% else %}-{% endif %}</p>
                <p>Tanggal Pensiun : {% if user.tanggalPensiun is  not null %}{{ user.tanggalPensiun|date('d M Y') }}{% else %}-{% endif %}</p>
