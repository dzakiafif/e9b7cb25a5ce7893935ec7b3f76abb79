                <p>Alamat Surat : {% if user.alamatSurat is defined %}{{ user.alamatSurat }}{% else %}-{% endif %}</p>
                <p>Golongan Darah : {% if user.golonganDarah is defined %}{{ user.golonganDarah }}{% else %}-{% endif %}</p>
                <p>No.KTP : {% if user.noKtp is defined %}{{ user.noKtp }}{% else %}-{% endif %}</p>
                <p>Agama : {% if user.agama is defined %}{{ user.agama }}{% else %}-{% endif %}</p>
                <p>Kebangsaan : {% if user.kebangsaan is defined %}{{ user.kebangsaan }}{% else %}-{% endif %}</p>
                <p>Pendidikan : {% if user.pendidikan is defined %}{{ user.pendidikan }}{% else %}-{% endif %}</p>
                <p>Asal Sekolah : {% if user.asalSekolah is defined %}{{ user.asalSekolah }}{% else %}-{% endif %}</p>
                <p>Jurusan : {% if user.jurusan is defined %}{{ user.jurusan }}{% else %}-{% endif %}</p>
                <p>BPJS keternagakerjaan : {% if bpjs[0] is defined %}{{ bpjs[0] }}{% else %}-{% endif %}</p>
                <p>BPJS Kesehatan : {% if bpjs[1] is defined %}{{ bpjs[1] }}{% else %}-{% endif %}</p>
                <p>NPWP : {% if user.npwp is defined %}{{ user.npwp }}{% else %}-{% endif %}</p>
                <p>No.Telp Rumah : {% if no_telp[0] is defined %}{{ no_telp[0] }}{% else %}-{% endif %}</p>
                <p>No.HP : {% if no_telp[1] is defined %}{{ no_telp[1] }}{% else %}-{% endif %}</p>
                <p>Ukuran Baju : {% if pakaian[0] is defined %}{{ pakaian[0] }}{% else %}-{% endif %} </p>
                <p>Ukuran Celana : {% if pakaian[1] is defined %}{{ pakaian[1] }}{% else %}-{% endif %}</p>
                <p>Ukuran Sepatu : {% if pakaian[2] is defined %}{{ pakaian[2] }}{% else %}-{% endif %}</p>
            {% else %}
                <p>golongan : {% if job.golongan is defined %}{{ job.golongan }}{% else %}-{% endif %}</p>
            {% endif %}
            <form method="post" action="{{ path('office_admin_confirm_validate',{'id':user.id}) }}">
                <button type="submit" class="btn btn-primary">VALIDATE</button>
            </form>
        </div>
    </div>
{% endblock %}